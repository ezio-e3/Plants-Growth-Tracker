@page "/gardener"
@inject IGardenerHttpClient Http
@using DigitalGarden.WebUI.Pages.Tables
@using DigitalGarden.WebUI.Pages.Forms



<div class="row">
    <div class="col-md-10">
        @*Place for search and sort *@ 
    </div>
    <div class="col-md-2">
        <a href="/add-gardener">Add New Gardener</a>
    </div>
</div>
<div class="row">
    <div class="col">
      <GardenerTable Gardeners="AllGardeners" /> 
      @* <AddGardener></AddGardener> *@
    </div>
</div>
<div class="row">
    <div class="col">
        @*Place for pagination*@
    </div>
</div>
@code {
    public List<GardenerModel>? AllGardeners {get; set;}
    protected async override Task OnInitializedAsync(){
        AllGardeners = await Http.GetGardeners();

    }
}
